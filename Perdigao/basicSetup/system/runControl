
#include        "${FOAM_CASE}/system/include/caseDefinition"

runControl
{
    application     "meancalc";
    file            "postProcessing/forceCoeffsAll/0/coefficient.dat";
    outputDir       "postProcessing/meancalc";
    stopFile        "<case>/.GOODBYE";
    interval        #eval{ 500.0*$dt };
    timeSeriesInfo
    {
        column          1;
        deltaT          $dt;
        CTU             #eval{ $lref/$Uxref };
        minSampleCTU    50;
        minRunCTU       $minSampleCTU;
        maxRunCTU       -1;
        minSkipCTU      -1;
        maxSkipCTU      -1;
    }
    transientDetection
    {
        mode            4;
        average         true;
        columns         ( 2 5 11 );  // !! c_D, c_L, c_S
    }
    stoppingCriteria
    {
        columns         ( 2 5 11 );
        targetAccuracy  ( 0.2 0.2 0.2 );
        targetRelative  ( true true true );
        targetChecksum  ( 1 1 1 );
        mode            3;
    }
}


