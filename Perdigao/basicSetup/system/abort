FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      abort;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

abort
{
    type    abort;
    libs    ( utilityFunctionObjects );

    executeControl  timeStep;
    executeInterval 1;

    file    $:runControl.stopFile;

    action  writeNow;
}


