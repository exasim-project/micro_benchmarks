FoamFile
{
    version     2.0;
    format      binary;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "62004";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform $Tref;

boundaryField
{
    // inlet
    "ii_.*"
    {
        type            fixedValue;
        value           uniform $Tref;
    }
    // outlet
    "oo_.*"
    {
        type            zeroGradient;
    }
    upper
    {
	type            slip;
    }
    // mixed inlet-outlet
    "io_.*"
    {
        type            freestream;
        freestreamBC
        {
            type        timeVaryingMappedFixedValue;
            offset      0;
            setAverage  off;
            mapMethod   nearest;
            value       $internalField;
        }
        value           $internalField;
    }
    "ww_.*"
    {
        type            atmTurbulentHeatFluxTemperature;
        heatSource      flux;
        alphaEff        alphaEff;
        Cp0             1005.0;
        q               uniform 0.0;
        value           uniform $Tref;
    }

    #include            "include/constraintPatches"
}


