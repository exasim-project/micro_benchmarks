FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

// calculate k value at inlet
Uref            #eval{ sqrt(sqr($Uxref) + sqr($Uyref) + sqr($Uzref)) };
kref            #eval{ 1.5*sqr($Uref*$Tu) };

dimensions      [ 0 2 -2 0 0 0 0 ];
internalField   uniform 0.3; //$kref;

boundaryField
{
    // inlet
    "ii_.*"
    {
        type            fixedValue;
        value           uniform $kref;
    }

    // outlet
    "oo_.*"
    {
        type            zeroGradient;
    }
    upper
    {
        type            slip;
    }
    // mixed inlet-outlet
    "io_.*"
    {
        type            freestream;
        freestreamBC
        {
            type        timeVaryingMappedFixedValue;
            offset      0;
            setAverage  off;
            mapMethod   nearest;
            value       $internalField;
        }
        value           $internalField;
    }

    // no-slip wall
    "ww_.*"
    {
        type            kqRWallFunction;
        value           $internalField;
    }

    #include            "include/constraintPatches"
}

// ************************************************************************* //
