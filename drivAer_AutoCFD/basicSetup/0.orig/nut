FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

// calculate nut value at inlet
nutref          #eval{ $viscRatio * $nuref };

dimensions      [ 0 2 -1 0 0 0 0 ];
internalField   uniform $nutref;

boundaryField
{
    $inletPatch		//Inlet
    {
        type            calculated;
        value           $internalField;
    }

    $outletPatch		//Outlet
    {
        type            calculated;
        value           $internalField;
    }

    $forcesWallPatches
    {
        type            nutUSpaldingWallFunction;
        value           $internalField;
        tolerance       1e-9;
    }
    $remainingWallPatches
    {
        type            nutUSpaldingWallFunction;
        value           $internalField;
        tolerance       1e-9;
    }

    #include            "include/constraintPatches"
}

// ************************************************************************* //
