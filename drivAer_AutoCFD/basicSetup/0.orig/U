FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

dimensions      [ 0 1 -1 0 0 0 0 ];
internalField   uniform ($Uxref $Uyref $Uzref);

boundaryField
{
    $inletPatch		//Inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    $outletPatch		//Outlet
    {
        type            zeroGradient;
    }

    $forcesWallPatches
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    $remainingWallPatches
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    #include            "include/constraintPatches"
}

// ************************************************************************* //
