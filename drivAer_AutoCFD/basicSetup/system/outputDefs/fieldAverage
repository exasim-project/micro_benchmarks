fieldAverage
{
    type            fieldAverage;
    libs            ( "libfieldFunctionObjects.so" );
    timeStart       $tAvg;
    enabled         true;
    writeControl    timeStep;
    writeInterval   $fieldAvgOutInterval;

    fields
    (
        U
        {
            mean            on;
            prime2Mean      on;
            base            time;
        }

        p
        {
            mean            on;
            prime2Mean      on;
            base            time;
        }

        turbulenceProperties:R
        {
            mean            on;
            prime2Mean      off;
            base            time;
        }

        nut
        {
            mean            on;
            prime2Mean      off;
            base            time;
        }

        wallShearStress
        {
            mean            on;
            prime2Mean      off;
            base            time;
        }
    );
}
