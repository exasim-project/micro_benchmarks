FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

// calculate velocity magnitude value at inlet
Uref            #eval{ sqrt(sqr($Uxref) + sqr($Uyref) + sqr($Uzref)) };

velocityDamping
{
    type            velocityDampingConstraint;
    selectionMode   all;
    UMax            #eval{ 4.0*$Uref };
}

